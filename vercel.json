{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NOTION_TOKEN": "@notion_api_key",
    "NOTION_DATABASE_ID": "@notion_database_id",
    "NEXT_PUBLIC_SITE_URL": "${VERCEL_URL}"
  },
  "buildCommand": "npm run build",
  "installCommand": "rm -f package-lock.json && npm install"
} 